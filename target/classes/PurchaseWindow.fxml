<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<?import java.lang.String?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.PaymentController">
    <children>
        <Button fx:id="BackButton" layoutX="32.0" layoutY="353.0" mnemonicParsing="false" onAction="#backHome"
                text="back"/>
        <ChoiceBox fx:id="PaymentMethodChoice" layoutX="186.0" layoutY="104.0" prefHeight="25.0" prefWidth="133.0"
                   value="Visa">
            <String fx:value="Visa"/>
            <String fx:value="MasterCard"/>
            <String fx:value="IsraCard"/>
            <String fx:value="Cal"/>
            <String fx:value="American Express"/>
        </ChoiceBox>
        <Text layoutX="80.0" layoutY="121.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Payment Mehtod:"/>
        <Text layoutX="82.0" layoutY="165.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Credit Number:"/>
        <TextField fx:id="CreditNumber" layoutX="186.0" layoutY="148.0" prefHeight="25.0" prefWidth="133.0"/>
        <Text layoutX="87.0" layoutY="256.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Amount to pay:"/>
        <TextField fx:id="AmountToPay" layoutX="188.0" layoutY="239.0" prefHeight="25.0" prefWidth="133.0"/>
        <Button fx:id="ConfirmPayment" layoutX="213.0" layoutY="297.0" onAction="#ConfirmVacationPayment"
                mnemonicParsing="false" text="Confirm Payment"/>
        <DatePicker fx:id="PaymentDate" layoutX="188.0" layoutY="191.0" prefHeight="25.0" prefWidth="133.0"/>
        <Text layoutX="84.0" layoutY="208.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Payment Date:"/>
    </children>
</AnchorPane>
